<h3>MANAGER</h3>

<section>
    <div class="jumbotron">

        <div class="row">
            <h2 class="text-center">Connections</h2>
            <br />

            <i ng-show="!DBConnections" class="fa fa-circle-o-notch fa-spin fa-4x" style="width: 100%; text-align: center"></i>
            <div ng-show="DBConnections" class="col-md-4" ng-repeat="DBC in DBConnections">
                <div class="panel panel-default">

                    <div class="panel-heading"><i class="fa fa-cogs" aria-hidden="true"></i> {{DBC.alias}}</div>

                    <div class="panel-body">
                        <span><strong>Database Type: </strong>{{DBC.database_type}}</span>
                        <br />
                        <span><strong>User: </strong>{{DBC.user}}</span>
                        <br />
                        <span><strong>Server: </strong>{{DBC.server}}</span>
                    </div>

                    <div class="panel-footer">
                        <div class="btn-group text-center" role="group" aria-label="...">
                            <input type="hidden" ng-model="DBClicked" value="{{DBC.ID}}" />
                            <button type="submit" ng-model="DBCOption" class="btn btn-primary" value="view-tables">Ver Tablas</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <h2 class="text-center">Data Bases</h2>
            <br />

            <i ng-show="!databases" class="fa fa-circle-o-notch fa-spin fa-4x" style="width: 100%; text-align: center"></i>
            <div ng-show="databases" class="col-md-3" ng-repeat="DB in databases">
                <div class="panel panel-default">

                    <div class="panel-heading text-center"><i class="fa fa-database" aria-hidden="true"></i> {{DB.name}}</div>

                    <div class="panel-footer">
                            <div class="row text-center">
                                <button data-database_id="{{DB.ID}}"
                                        data-database_name="{{DB.name}}"
                                        class="btn btn-primary"
                                        data-toggle="modal"
                                        data-target="#tablesModal">
                                    Ver Tablas <span class="badge"> {{DB.cant_tablas}}</span>
                                </button>
                            </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal fade" id="tablesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-4" ng-repeat="table in tables" ng-show="database_ID_active == table.ID_database">
                                <div class="panel panel-default">
                                    <div class="panel-heading text-center"><i class="fa fa-table" aria-hidden="true"></i> {{table.table_name}}</div>

                                    <div class="panel-footer">
                                        <div class="row text-center">
                                            <form ng-submit="dropTable()">
                                                <input type="hidden" ng-model="drop_table_ID" value="{{table.ID_table}}">
                                                <button type="submit"
                                                        class="btn btn-danger"
                                                        data-loading-text="
                                                    <i class='fa fa-circle-o-notch fa-spin'></i>"
                                                    >
                                                    DROP
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-md-8 col-md-push-2">
        <div class="row alert alert-danger margin-top-5 text-center" ng-show="showWarningMessage" ng-bind-html-unsafe="warningMessage"></div>
        <div class="row alert alert-success margin-top-5 text-center" ng-show="showSuccessMessage" ng-bind-html-unsafe="successMessage"></div>
    </div>
</div>

<section>
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">

                <div class="panel-heading">Add Connection</div>

                <form ng-submit="addDatabase()">
                    <div class="panel-body">
                        <div class="well-sm">

                            <div class="row">
                                <select ng-required="true" ng-model="database_type" class="form-control margin-top-5">
                                    <option value="">database_type</option>
                                    <option value="mariaDB">mariaDB</option>
                                    <option value="mongoDB">mongoDB</option>
                                    <option value="SQLServer">SQLServer</option>
                                </select>
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="text" ng-model="user" placeholder="user" />
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="password" ng-model="pass" placeholder="pass" />
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="text" ng-model="server" placeholder="server" />
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="text" ng-model="protocol" placeholder="protocol" />
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="text" ng-model="port" placeholder="port" />
                            </div>
                            <div class="row">
                                <input ng-required="true" class="form-control margin-top-5" type="text" ng-model="alias" placeholder="alias" />
                            </div>

                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <button type="submit"
                                    class="btn btn-primary"
                                    data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i>"
                                >
                                ADD
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <div class="col-md-6">

            <div class="panel panel-default">

                <div class="panel-heading">Create Database</div>

                <form ng-submit="createDatabase()">
                    <div class="panel-body">
                        <div class="well-sm">
                            <div class="row"><input ng-required="true" class="form-control" type="text" ng-model="DB_name" placeholder="Name" /></div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <button type="submit"
                                    class="btn btn-primary"
id                                    data-loading-text="
                                <i class='fa fa-circle-o-notch fa-spin'></i>"
                                >
                                CREATE
                            </button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="panel panel-default">

                <div class="panel-heading">Create Table</div>
                <form ng-submit="createTable()">
                    <div class="panel-body">
                        <div class="well-sm">

                            <div class="row"><input ng-required="true" class="form-control" type="text" ng-model="table_name" placeholder="Table name" /></div>
                            <div class="row">
                                <select ng-required="true" ng-model="database_id" class="form-control margin-top-5">
                                    <option value="">Data Base</option>
                                    <option ng-repeat="DB in databases" value="{{DB.ID}}">{{DB.name}}</option>
                                </select>
                            </div>
                        </div>

                        <table class="table">
                            <thead> 
                                <tr>
                                    <th>Alias Connection</th>
                                    <th>Column Name</th>
                                    <th>Type</th>
                                    <th>Null</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        <select ng-required="true" class="table_alias form-control">
                                            <option value="">Connection</option>
                                            <option ng-repeat="DBC in DBConnections" value="{{DBC.ID}}">{{DBC.alias}}</option>
                                        </select>
                                    </th>
                                    <td><input ng-required="true" type="text" class="table_name form-control" /></td>
                                    <td>
                                        <select ng-required="true" class="table_type form-control">
                                            <option value="">Type</option>
                                            <option value="string">String</option>
                                            <option value="int">Int</option>
                                            <option value="double">Double</option>
                                        </select>
                                    </td>
                                    <td><input type="checkbox" class="table_null form-control" value="1" /></td>
                                 </tr>
                            </tbody>
                        </table>

                        <button class="btn btn-primary btn-block btn-sm margin-top-5" ng-click="addNewRow()" data-loading-text="
                            <i class='fa fa-circle-o-notch fa-spin'></i>"
                            >
                            <span class="glyphicon glyphicon-plus" aria-hidden="true">
                            </span> Column
                        </button>

                    </div>
                    <div class="panel-footer">
                        
                        <div class="row text-center">
                            <button type="submit"
                                    class="btn btn-primary"
                                    data-loading-text="
                                <i class='fa fa-circle-o-notch fa-spin'></i>"
                                >
                                CREATE
                            </button>
                        </div>
                    </div>
                </form>

            </div>

        </div>

        <div class="col-md-3">
            <div class="panel panel-default">

                <div class="panel-heading">Drop Table</div>

                <form ng-submit="dropTable()">
                    <div class="panel-body">
                        <div class="well-sm">
                            <div class="row">
                                <select ng-model="drop_table_ID"  class="form-control margin-top-5">
                                    <option value="">Table</option>
                                    <option ng-repeat="table in tables" value="{{table.ID_table}}">{{table.DB_name}}.{{table.table_name}}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <button type="submit"
                                    class="btn btn-danger"
                                    data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i>"
                                >
                                DROP
                            </button>
                         </div>
                    </div>
                </form>

            </div>
        </div>

        <div class="clearfix"></div>
    </div>
</section>

<section> <!-- QUERIES -->
    <div class="row"></div>
    <div class="panel panel-default">
        <div class="panel-heading">Queries</div>
        <div class="panel-body">
            <div id="querydiv">
                <form>
                    <div class="row">
                        <!--query  -->
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">Query</span>
                                <select class="form-control">
                                    <option value="select">select</option>
                                    <option value="delete">delete</option>
                                    <option value="update">update</option>
                                    <option value="drop">drop</option>
                                </select>
                            </div>
                        </div>
                        <!-- DATABASE -->
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">Source</span>
                                <select ng-model="query_DB" class="query_DB form-control">
                                    <option value="">Data Base</option>
                                    <option ng-repeat="DB in databases" value="{{DB.ID}}">{{DB.name}}</option>
                                </select>
                            </div>
                        </div>
                        <!-- TABLA -->
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">From</span>
                                <select ng-model="query_table" class="query_table form-control">
                                    <option value="">Table</option>
                                    <option ng-repeat="table in tables" value="{{table.ID_table}}" class="{{table.ID_database}}">{{table.DB_name}}.{{table.table_name}}</option>
                                </select>
                                <span class="input-group-addon btn btn-primary"
                                      id="basic-addon1"
                                      ng-click="addNewRow()"
                                      data-loading-text="
                                    <i class='fa fa-circle-o-notch fa-spin'></i>"
                                    >
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> join
                                </span>
                            </div>
                        </div>
                        <!-- COLUMNA -->
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">Column</span>
                                <select ng-model="query_columns" class="query_columns form-control">
                                    <option value="">column</option>
                                    <option value="*"> * </option>
                                    <option ng-repeat="column in columns" value="{{column.ID}}" class="{{column.ID_tabla}}">{{column.table_name}}.{{column.column_name}}</option>
                                </select>
                                <span class="input-group-addon btn btn-primary"
                                      id="basic-addon1"
                                      ng-click="addNewRow()"
                                      data-loading-text="
                                    <i class='fa fa-circle-o-notch fa-spin'></i>"
                                    >
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <!--JOIN DIV -->
                    <div id="join_div">

                    </div>
                    <br>
                    <!-- WHERE -->
                    <div id="where_div">
                        <div class="input-group">
                            <span class="input-group-addon">Where</span>
                            <div class="btn-group" role="group" aria-label="...">

                                <select disabled ng-model="query_columns" class="query_where_columns form-control">
                                    <option value="">column</option>
                                    <option ng-repeat="column in columns" value="{{column.ID}}" class="{{column.ID_tabla}}">({{column.column_type}}) {{column.DB_name}}.{{column.table_name}}.{{column.column_name}}</option>
                                </select>

                                <select disabled class="input-group-addon form-control">
                                    <option value="=">=</option>
                                    <option value="!=">!=</option>
                                    <option value="<"><</option>
                                    <option value=">">></option>
                                </select>
                                <input type="text" class="form-control" disabled>
                            </div>
                                <span class="input-group-addon btn btn-primary"
                                      id="basic-addon1"
                                      ng-click="addNewRow()"
                                      data-loading-text="
                                    <i class='fa fa-circle-o-notch fa-spin'></i>"
                                    >
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </span>
                            </div>
                    </div>
                    <br>
                    <br>
                </form>
            </div>
            <input type="checkbox" id="where_check" value="value" />
            <label for="chk">Where? </label>
            <br />
            <div class="panel-footer">
                <div class="row text-center">
                    <button type="submit"
                            class="btn btn-danger"
                            id="load"
                            data-loading-text="
                                <i class='fa fa-circle-o-notch fa-spin'></i>"
                                >
                               SUBMIT
                            </button>
                </div>
            </div>
        </div>

    </div>
</section>
